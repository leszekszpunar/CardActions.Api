{
  "repository": {
    "type": "git",
    "url": "https://github.com/leszekszpunar/CardActions.Api.git"
  },
  "branches": [
    {
      "name": "main",
      "channel": "latest"
    },
    {
      "name": "develop",
      "prerelease": "develop",
      "channel": "beta"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "${process.env.GITHUB_REF_NAME === 'main' ? 'CHANGELOG.md' : 'CHANGELOG-develop.md'}",
        "changelogTitle": "# Changelog ${process.env.GITHUB_REF_NAME === 'main' ? '' : 'Development'}"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > VERSION"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "${process.env.GITHUB_REF_NAME === 'main' ? 'CHANGELOG.md' : 'CHANGELOG-develop.md'}",
          "VERSION"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
